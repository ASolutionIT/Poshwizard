<Window x:Class="Launcher.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource AppBackgroundBrush}"
        MinWidth="500"
        MinHeight="300">
    
    <Window.Resources>
        <!-- Button style -->
        <Style x:Key="ErrorDialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Error header with icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock FontFamily="Segoe MDL2 Assets" 
                      FontSize="32" 
                      Foreground="#E74856"
                      Text="&#xEA39;"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding ErrorTitle}" 
                          FontSize="20" 
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource BodyForegroundBrush}"/>
                <TextBlock Text="An error occurred during execution" 
                          FontSize="12"
                          Foreground="{DynamicResource SecondaryForegroundBrush}"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Error details -->
        <Border Grid.Row="1" 
                Background="{DynamicResource TextBoxBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding ErrorMessage}" 
                          FontFamily="Consolas, Courier New"
                          FontSize="12"
                          Foreground="{DynamicResource BodyForegroundBrush}"
                          TextWrapping="Wrap"
                          Padding="4"/>
            </ScrollViewer>
        </Border>
        
        <!-- Action buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,16,0,0">
            <Button Content="Copy to Clipboard"
                   Style="{StaticResource ErrorDialogButtonStyle}"
                   Background="{DynamicResource TextBoxBackgroundBrush}"
                   Foreground="{DynamicResource BodyForegroundBrush}"
                   Click="CopyButton_Click"
                   Margin="0,0,8,0"/>
            <Button Content="OK"
                   Style="{StaticResource ErrorDialogButtonStyle}"
                   IsDefault="True"
                   Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
