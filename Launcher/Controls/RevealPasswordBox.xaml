<UserControl x:Class="Launcher.Controls.RevealPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <UserControl.Resources>
        <!-- Toggle button style for Show/Hide -->
        <Style x:Key="RevealToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="BtnBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                            </Trigger>
                            <!-- Keep transparent when checked so text stays legible in dark theme -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Input area styled to match TextBox with inlined toggle button to prevent width changes -->
    <Border Background="{DynamicResource TextBoxBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="0"
            SnapsToDevicePixels="True">
        <Border.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Visibility" Value="Collapsed"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsChecked, ElementName=RevealToggleButton}" Value="True">
                        <Setter Property="Visibility" Value="Visible"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="PasswordBox">
                <Setter Property="Visibility" Value="Visible"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsChecked, ElementName=RevealToggleButton}" Value="True">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Resources>
        <DockPanel LastChildFill="True">
            <ToggleButton x:Name="RevealToggleButton"
                          DockPanel.Dock="Right"
                          Margin="2,2,2,2"
                          Style="{StaticResource RevealToggleButtonStyle}"
                          ToolTip="Show/Hide password"
                          Background="Transparent"
                          BorderThickness="0">
                <TextBlock x:Name="ToggleText" Text="ðŸ‘" FontFamily="Segoe UI Symbol" FontSize="16"/>
            </ToggleButton>
            <Grid>
                <!-- Plain text box (visible when toggled) -->
                <TextBox x:Name="PlainBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="{DynamicResource BodyForegroundBrush}"
                         Padding="8,6"
                         Visibility="Collapsed"/>

                <!-- Password box (default) -->
                <PasswordBox x:Name="PwdBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource BodyForegroundBrush}"
                             Padding="8,6"/>
            </Grid>
        </DockPanel>
    </Border>
</UserControl>
