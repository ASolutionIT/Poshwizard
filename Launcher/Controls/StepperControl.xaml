<UserControl x:Class="Launcher.Controls.StepperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ItemsControl x:Name="StepsContainer">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <!-- Connector Line -->
                        <Line x:Name="Connector"
                              Stroke="{StaticResource BorderBrush}"
                              X1="0" Y1="20"
                              X2="100" Y2="20"
                              StrokeThickness="2"
                              Visibility="{Binding ShowConnector}"/>
                        
                        <!-- Step Circle -->
                        <Border Width="40" Height="40"
                                CornerRadius="20"
                                Background="{Binding IsCompleted, Converter={StaticResource StepStatusBrushConverter}, FallbackValue=Transparent}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="2">
                            <TextBlock Text="{Binding StepNumber}"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    
                    <!-- Step Title -->
                    <TextBlock Grid.Row="1"
                             Text="{Binding Title}"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl> 