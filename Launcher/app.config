<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.diagnostics>
    <sources>
      <source name="Poshwizard" switchName="PoshwizardSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="logfile" type="System.Diagnostics.TextWriterTraceListener" initializeData="logs/Poshwizard.log">
            <filter type="System.Diagnostics.EventTypeFilter" initializeData="Verbose" />
          </add>
          <remove name="Default" />
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="PoshwizardSwitch" value="All" />
    </switches>
  </system.diagnostics>

  <!-- Ensure assemblies can be probed from a local 'bin' subfolder next to the exe -->
  <runtime>
    <probing privatePath="bin" />
  </runtime>
</configuration>