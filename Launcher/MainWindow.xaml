<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        xmlns:controls="clr-namespace:Launcher.Controls"
        xmlns:viewModels="clr-namespace:Launcher.ViewModels"
        xmlns:converters="clr-namespace:Launcher.Converters"
        xmlns:helpers="clr-namespace:Launcher.Helpers"
        xmlns:behaviors="clr-namespace:Launcher.Behaviors"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="720" Width="1080"
        Icon="{Binding WindowTitleIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        Background="{DynamicResource AppBackgroundBrush}"
        BorderThickness="0"
        Topmost="False" MinWidth="800" MinHeight="600" FontSize="{DynamicResource FontSizeBase}">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- CheckBox styled as a toggle switch (Fluent-aligned) -->
        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="BackgroundBorder"
                                    Background="{DynamicResource TextBoxBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Width="40"
                                    Height="20">
                                <Ellipse x:Name="Thumb"
                                         Width="16"
                                         Height="16"
                                         Fill="{DynamicResource BodyForegroundBrush}"
                                         HorizontalAlignment="Left"
                                         Margin="2,0,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="2"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small neutral button style for inline buttons (e.g., path browse) -->
        <Style x:Key="PathBrowseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource IconButtonCheckedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource TextBoxDisabledBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Button Styles -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TitleBarTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TitleBarButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TitleBarButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Close Button (Red on hover) -->
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#C50F1F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Icon Button (for theme toggle) -->
        <Style x:Key="TitleBarIconButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TitleBarTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4" Margin="4,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TitleBarButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon-only ToggleButton style used for theme toggle (sun/moon) -->
        <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                            </Trigger>
                            <!-- When checked, keep background transparent (no shaded box) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Converters -->
        <converters:NullToFalseConverter x:Key="NullToFalseConverter"/>
        <converters:CountToTrueConverter x:Key="CountToTrueConverter"/>
        <converters:NullOrEmptyToFalseConverter x:Key="NullOrEmptyToFalseConverter"/>
        <converters:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter"/>
        <converters:SecureStringToStringConverter x:Key="SecureStringConverter"/>
        <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter"/>
        <converters:RowCountToHeightConverter x:Key="RowCountToHeightConverter"/>
        <converters:ProgressPercentageToWidthConverter x:Key="ProgressPercentageToWidthConverter"/>

        <!-- Colors are supplied by theme dictionaries (see App.xaml). Use DynamicResource when consuming. -->

        <!-- ═══ ENHANCED PRIMARY BUTTON STYLE ═══ -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeButton}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.02" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.02" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource ButtonDisabledBrush}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══ ENHANCED TEXTBOX STYLE ═══ -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource TextBoxDisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                     <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                     <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
                     <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for ComboBoxes to honor theme brushes -->
        <Style x:Key="WizardComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="MinWidth" Value="220"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="BackgroundBorder"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"/>

                            <ContentPresenter x:Name="ContentPresenter"
                                              Margin="8,0,28,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>

                            <ToggleButton x:Name="DropDownToggle" Grid.ColumnSpan="2"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,6,0"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent">
                                            <TextBlock Text="&#xE70D;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource BodyForegroundBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Grid.ColumnSpan="2"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="{DynamicResource ContentBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        SnapsToDevicePixels="True"
                                        Margin="0,2,0,0">
                                    <ScrollViewer CanContentScroll="True"
                                                  Background="Transparent"
                                                  Padding="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource TextBoxDisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for DatePicker with Fluent calendar icon -->
        <Style x:Key="WizardDatePickerStyle" TargetType="DatePicker">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="CalendarStyle">
                <Setter.Value>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <DatePickerTextBox x:Name="PART_TextBox"
                                                       Grid.Column="0"
                                                       Foreground="{TemplateBinding Foreground}"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       VerticalContentAlignment="Center"
                                                       Focusable="{TemplateBinding Focusable}"/>
                                    
                                    <Button x:Name="PART_Button"
                                            Grid.Column="1"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="28"
                                            Height="28"
                                            Margin="4,0,0,0"
                                            Focusable="False"
                                            VerticalAlignment="Center">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="ButtonBorder"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="4">
                                                    <TextBlock Text="&#xE787;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource BodyForegroundBrush}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    
                                    <Popup x:Name="PART_Popup"
                                           AllowsTransparency="True"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=PART_TextBox}"
                                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for CheckBoxes (Fluent-aligned) -->
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="CheckBorder"
                                    Grid.Column="0"
                                    Width="18" Height="18"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="0,0,8,0">
                                <TextBlock x:Name="CheckMark"
                                           Text="✓"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource BodyForegroundBrush}"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter TargetName="CheckMark" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

         <!-- Style for Labels -->
         <Style TargetType="TextBlock" x:Key="FormLabelStyle">
              <Setter Property="FontSize" Value="{DynamicResource FontSizeLabel}"/>
              <Setter Property="FontWeight" Value="Medium"/>
              <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
              <Setter Property="Margin" Value="0,0,0,6"/>
         </Style>

         <!-- Style for Mandatory Labels -->
         <Style TargetType="TextBlock" x:Key="WizardParameterLabelStyle" BasedOn="{StaticResource FormLabelStyle}">
             <Setter Property="Text" Value="{Binding Label}"/>
             <Style.Triggers>
                 <!-- Show asterisk when mandatory -->
                 <DataTrigger Binding="{Binding IsMandatory}" Value="True">
                     <Setter Property="Text" Value="{Binding Label, StringFormat={}{0} *}"/>
                 </DataTrigger>
             </Style.Triggers>
         </Style>

        <!-- DataTemplate for Vertical Step Indicator Item -->
        <DataTemplate DataType="{x:Type controls:StepItem}">
             <Grid Margin="0,0,0,15">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="Auto"/>
                     <ColumnDefinition Width="*"/>
                 </Grid.ColumnDefinitions>

                 <!-- Circle Indicator -->
                <Ellipse Grid.Column="0" Width="12" Height="12" StrokeThickness="2" Margin="0,4,12,0" VerticalAlignment="Top">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Stroke" Value="{DynamicResource SidebarTextBrush}"/>
                            <Setter Property="Fill" Value="Transparent"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                    <Setter Property="Stroke" Value="{DynamicResource SidebarHighlightBrush}"/>
                                    <Setter Property="Fill" Value="{DynamicResource SidebarHighlightBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                 <!-- Connecting Line (simplified) -->
                 <Line Grid.Column="0" X1="6" Y1="18" X2="6" Y2="45" Stroke="{DynamicResource SidebarTextBrush}" StrokeThickness="1" VerticalAlignment="Top" HorizontalAlignment="Left">
                      <Line.Style>
                          <Style TargetType="Line">
                               <Setter Property="Visibility" Value="Visible"/>
                               <Style.Triggers>
                                   <DataTrigger Binding="{Binding ShowConnector}" Value="False">
                                       <Setter Property="Visibility" Value="Collapsed"/>
                                   </DataTrigger>
                               </Style.Triggers>
                          </Style>
                      </Line.Style>
                 </Line>

                 <!-- Step Text -->
                 <StackPanel Grid.Column="1">
                    <TextBlock FontSize="{DynamicResource FontSizeSmall}" Margin="0,0,0,2">
                        <TextBlock.Style>
                             <Style TargetType="TextBlock">
                                 <Setter Property="Text" Value="{Binding StepNumber, StringFormat='Step {0}'}"/>
                                 <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                 <Style.Triggers>
                                     <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                         <Setter Property="Foreground" Value="{DynamicResource SidebarHighlightBrush}"/>
                                     </DataTrigger>
                                 </Style.Triggers>
                             </Style>
                         </TextBlock.Style>
                    </TextBlock>
                     <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeBody}" FontWeight="Medium">
                          <TextBlock.Style>
                             <Style TargetType="TextBlock">
                                 <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                 <Style.Triggers>
                                     <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                         <Setter Property="Foreground" Value="White"/>
                                         <Setter Property="FontWeight" Value="SemiBold"/>
                                     </DataTrigger>
                                 </Style.Triggers>
                             </Style>
                         </TextBlock.Style>
                     </TextBlock>
                 </StackPanel>
             </Grid>
        </DataTemplate>

        <!-- DataTemplate for Error View Model -->
        <DataTemplate DataType="{x:Type viewModels:ErrorViewModel}">
            <Border BorderBrush="Red" BorderThickness="1" Margin="0" Padding="20" Background="#FFF0F0">
                <StackPanel>
                    <TextBlock Text="Error" FontSize="{DynamicResource FontSizeHeading}" FontWeight="Bold" Foreground="Red" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- DataTemplate for Card View Model (Reusable Card Control) -->
        <DataTemplate DataType="{x:Type viewModels:CardViewModel}">
            <Border Padding="20" CornerRadius="8" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeHeading}" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{DynamicResource HeadingForegroundBrush}"/>
                    <TextBox Text="{Binding Content, Mode=OneWay}" 
                             FontSize="{DynamicResource FontSizeBody}" 
                             TextWrapping="Wrap" 
                             Foreground="{DynamicResource BodyForegroundBrush}"
                             Background="Transparent"
                             BorderThickness="0"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Cursor="Arrow"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- Updated DataTemplate for Generic Form View Model -->
        <DataTemplate DataType="{x:Type viewModels:GenericFormViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Padding="0,0,20,0"
                          controls:ScrollResetBehavior.ResetOnDataContextChange="True">
                 <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeHeading}" Margin="0,0,0,25" FontWeight="SemiBold" Foreground="{DynamicResource HeadingForegroundBrush}"/>
                    
                    <!-- Display Additional Cards (if any) -->
                    <ItemsControl ItemsSource="{Binding AdditionalCards}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="20" CornerRadius="8" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeHeading}" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                        <TextBox Text="{Binding Content, Mode=OneWay}" 
                                                 FontSize="{DynamicResource FontSizeBody}" 
                                                 TextWrapping="Wrap" 
                                                 Foreground="{DynamicResource BodyForegroundBrush}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 IsReadOnly="True"
                                                 IsTabStop="False"
                                                 Cursor="Arrow"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Display Parameters (form fields) wrapped in card -->
                    <Border Padding="20" CornerRadius="8" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                        </Border.Effect>
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Style="{StaticResource WizardParameterLabelStyle}" Margin="0,0,0,8"/>

                                        <ContentPresenter Grid.Row="1" Content="{Binding}">
                                        <ContentPresenter.Style>
                                            <Style TargetType="ContentPresenter">
                                                <!-- Default Template: TextBox -->
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                                            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                     Width="{Binding ControlWidth, FallbackValue=600}"
                                                                     HorizontalAlignment="Left"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <!-- Password field: use custom WinFormsPasswordBox with converter -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPassword}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <controls:WinFormsPasswordBox
                                                                        Password="{Binding SecureValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SecureStringConverter}}"
                                                                        Width="{Binding ControlWidth, FallbackValue=600}"
                                                                        HorizontalAlignment="Left"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Numeric spinner control -->
                                                    <DataTrigger Binding="{Binding IsNumeric}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <Grid Width="{Binding ControlWidth, FallbackValue=240}" HorizontalAlignment="Left">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBox Grid.Column="0"
                                                                                 Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                                 HorizontalAlignment="Stretch"
                                                                                 VerticalContentAlignment="Center"
                                                                                 Margin="0,0,6,0"/>
                                                                        <Button Grid.Column="1"
                                                                                Command="{Binding IncrementNumericCommand}"
                                                                                Width="32"
                                                                                Height="32"
                                                                                Margin="0,0,4,0"
                                                                                ToolTip="Increase"
                                                                                Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                                BorderThickness="1">
                                                                            <TextBlock Text="▲" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                                                        </Button>
                                                                        <Button Grid.Column="2"
                                                                                Command="{Binding DecrementNumericCommand}"
                                                                                Width="32"
                                                                                Height="32"
                                                                                ToolTip="Decrease"
                                                                                Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                                BorderThickness="1">
                                                                            <TextBlock Text="▼" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                                                        </Button>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Date picker -->
                                                    <DataTrigger Binding="{Binding IsDate}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <DatePicker SelectedDate="{Binding DateValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Null}}"
                                                                                Width="{Binding ControlWidth, FallbackValue=240}"
                                                                                HorizontalAlignment="Left"
                                                                                SelectedDateFormat="Short"
                                                                                Style="{StaticResource WizardDatePickerStyle}"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Option group (radio buttons) -->
                                                    <DataTrigger Binding="{Binding IsOptionGroup}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ItemsControl ItemsSource="{Binding OptionItems}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="{Binding OptionGroupOrientation}"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <RadioButton Content="{Binding Value}"
                                                                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                                             GroupName="{Binding DataContext.Name, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                                             Margin="0,0,18,8"
                                                                                             Foreground="{DynamicResource BodyForegroundBrush}"
                                                                                             FontSize="{DynamicResource FontSizeBody}"/>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Multi-line text -->
                                                    <DataTrigger Binding="{Binding IsMultiLineText}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                             Width="{Binding ControlWidth, FallbackValue=600}"
                                                                             HorizontalAlignment="Left"
                                                                             AcceptsReturn="True"
                                                                             TextWrapping="Wrap"
                                                                             VerticalScrollBarVisibility="Auto"
                                                                             Height="{Binding MultiLineRows, Converter={StaticResource RowCountToHeightConverter}}"
                                                                             SpellCheck.IsEnabled="True"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Trigger for Boolean: CheckBox (but NOT a switch) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ParameterType}" Value="{x:Type system:Boolean}"/>
                                                            <Condition Binding="{Binding IsSwitch}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <CheckBox IsChecked="{Binding BoolValue, UpdateSourceTrigger=PropertyChanged}"
                                                                              HorizontalAlignment="Left"
                                                                              IsThreeState="False"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    <!-- Trigger for Switch: Use styled ToggleButton -->
                                                    <DataTrigger Binding="{Binding IsSwitch}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <CheckBox Style="{StaticResource ToggleCheckBoxStyle}"
                                                                              IsChecked="{Binding BoolValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=False}"
                                                                              HorizontalAlignment="Left"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    
                                                    <!-- Trigger for ListBox (single-select) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsListBox}" Value="True"/>
                                                            <Condition Binding="{Binding IsMultiSelect}" Value="False"/>
                                                            <Condition Binding="{Binding Choices, Converter={StaticResource NullToFalseConverter}}" Value="True"/>
                                                            <Condition Binding="{Binding IsOptionGroup}" Value="False"/>
                                                            <Condition Binding="{Binding IsNumeric}" Value="False"/>
                                                            <Condition Binding="{Binding IsDate}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ListBox ItemsSource="{Binding Choices}"
                                                                             SelectedItem="{Binding Value, Mode=TwoWay}"
                                                                             Width="{Binding ControlWidth, FallbackValue=600}"
                                                                             MinHeight="150"
                                                                             MaxHeight="280"
                                                                             HorizontalAlignment="Left"
                                                                             Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                             BorderBrush="{DynamicResource BorderBrush}"
                                                                             BorderThickness="1"
                                                                             Padding="0"
                                                                             SelectionMode="Single">
                                                                        <ListBox.ItemContainerStyle>
                                                                            <Style TargetType="ListBoxItem">
                                                                                <Setter Property="Padding" Value="16,10"/>
                                                                                <Setter Property="Margin" Value="0"/>
                                                                                <Setter Property="Background" Value="Transparent"/>
                                                                                <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                                                        <Setter Property="Foreground" Value="White"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ListBox.ItemContainerStyle>
                                                                    </ListBox>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- Trigger for ListBox (multi-select with Ctrl/Shift+Click) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsListBox}" Value="True"/>
                                                            <Condition Binding="{Binding IsMultiSelect}" Value="True"/>
                                                            <Condition Binding="{Binding Choices, Converter={StaticResource NullToFalseConverter}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ListBox ItemsSource="{Binding Choices}"
                                                                             behaviors:ListBoxSelectionBehavior.SelectedItems="{Binding SelectedItems}"
                                                                             Width="{Binding ControlWidth, FallbackValue=600}"
                                                                             MinHeight="150"
                                                                             MaxHeight="280"
                                                                             HorizontalAlignment="Left"
                                                                             Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                             BorderBrush="{DynamicResource BorderBrush}"
                                                                             BorderThickness="1"
                                                                             Padding="0"
                                                                             SelectionMode="Extended">
                                                                        <ListBox.ItemContainerStyle>
                                                                            <Style TargetType="ListBoxItem">
                                                                                <Setter Property="Padding" Value="16,10"/>
                                                                                <Setter Property="Margin" Value="0"/>
                                                                                <Setter Property="Background" Value="Transparent"/>
                                                                                <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                                                        <Setter Property="Foreground" Value="White"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ListBox.ItemContainerStyle>
                                                                    </ListBox>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- Trigger for ValidateSet/CSV: ComboBox (if NOT ListBox) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsListBox}" Value="False"/>
                                                            <Condition Binding="{Binding Choices, Converter={StaticResource NullToFalseConverter}}" Value="True"/>
                                                            <Condition Binding="{Binding Choices.Count, Converter={StaticResource CountToTrueConverter}}" Value="True"/>
                                                            <Condition Binding="{Binding IsOptionGroup}" Value="False"/>
                                                            <Condition Binding="{Binding IsMultiLineText}" Value="False"/>
                                                            <Condition Binding="{Binding IsNumeric}" Value="False"/>
                                                            <Condition Binding="{Binding IsDate}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ComboBox 
                                                                        ItemsSource="{Binding Choices}" 
                                                                        SelectedItem="{Binding Value, Mode=TwoWay}"
                                                                        Width="{Binding ControlWidth, FallbackValue=234}"
                                                                        MinWidth="216"
                                                                        HorizontalAlignment="Left"
                                                                        Margin="0,0,40,0"
                                                                        Style="{StaticResource WizardComboBoxStyle}" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- NEW Trigger for File/Folder Path Selector -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <!-- Check if PathType is File OR Folder -->
                                                            <Condition Binding="{Binding PathType}" Value="File"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                                                    <DockPanel LastChildFill="True">
                                                                        <Button 
                                                                                DockPanel.Dock="Right" 
                                                                                Command="{Binding BrowsePathCommand}" 
                                                                                Style="{StaticResource PathBrowseButtonStyle}"
                                                                                Margin="6,0,0,0" VerticalAlignment="Center"
                                                                                ToolTip="Browse for file">
                                                                            <TextBlock Text="..." FontWeight="Bold" FontSize="16"/>
                                                                        </Button>
                                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                                 HorizontalAlignment="Stretch"/>
                                                                    </DockPanel>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PathType}" Value="Folder"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                                                    <DockPanel LastChildFill="True">
                                                                        <Button 
                                                                                DockPanel.Dock="Right" 
                                                                                Command="{Binding BrowsePathCommand}" 
                                                                                Style="{StaticResource PathBrowseButtonStyle}"
                                                                                Margin="6,0,0,0" VerticalAlignment="Center"
                                                                                ToolTip="Browse for folder">
                                                                            <TextBlock Text="..." FontWeight="Bold" FontSize="16"/>
                                                                        </Button>
                                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                                 HorizontalAlignment="Stretch"/>
                                                                    </DockPanel>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                </Style.Triggers>
                                            </Style>
                                        </ContentPresenter.Style>
                                    </ContentPresenter>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>


        <!-- DataTemplate for Execution Console View -->
        <DataTemplate DataType="{x:Type viewModels:ExecutionConsoleViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Actions (right-aligned, no header text) -->
                <DockPanel Grid.Row="0" Margin="0,0,8,10">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelCommand}"
                                IsEnabled="{Binding IsRunning}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="100"
                                Margin="0,0,8,0"/>
                        <Button Content="Open Log" Command="{Binding OpenLogCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="100"
                                Margin="0,0,8,0"/>
                    </StackPanel>
                </DockPanel>

                <!-- Console List -->
                <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Background="{DynamicResource CardBackgroundBrush}">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="1" BlurRadius="6" Opacity="0.12"/>
                    </Border.Effect>
                    <ListBox ItemsSource="{Binding Lines}" 
                             FontFamily="Consolas, Global Monospace"
                             FontSize="{DynamicResource FontSizeMonospace}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             controls:AutoScrollBehavior.EnableAutoScroll="True">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding Foreground}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="HOST">
                                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="OUTPUT">
                                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="">
                                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Status / Footer (no extra Close button here) -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock Text="{Binding StatusText}" Foreground="{DynamicResource BodyForegroundBrush}"/>
                    <TextBlock Foreground="{DynamicResource BodyForegroundBrush}">
                        <Run Text="Log: "/><Run Text="{Binding LogFilePath}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>  <!-- Custom Title Bar -->
            <RowDefinition Height="*"/>   <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="{DynamicResource TitleBarBackgroundBrush}"
                BorderBrush="{DynamicResource TitleBarBorderBrush}"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>   <!-- Icon + Title -->
                    <ColumnDefinition Width="*"/>      <!-- Draggable area -->
                    <ColumnDefinition Width="Auto"/>   <!-- Window buttons -->
                </Grid.ColumnDefinitions>

                <!-- Left: Icon + Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Image Source="{Binding WindowTitleIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                           Width="16" Height="16" Margin="0,0,8,0"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WindowTitleIconPath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock Text="{Binding WindowTitle}"
                               FontSize="12"
                               Foreground="{DynamicResource TitleBarTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Center: Empty (draggable area) -->

                <!-- Right: Window Control Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Minimize -->
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>

                    <!-- Maximize/Restore -->
                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="MaximizeButton_Click"
                            ToolTip="Maximize"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock x:Name="MaximizeIcon" Text="&#xE922;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource TitleBarCloseButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="Close"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE106;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{DynamicResource SidebarBackgroundBrush}"
                        Padding="16,20"
                        x:Name="SidebarBorder"
                        CornerRadius="0,0,0,12">
            <StackPanel>
                <!-- Branding Section -->
                <Border Background="{DynamicResource SidebarBackgroundBrush}"
                        BorderThickness="0"
                        Padding="12,12"
                        Margin="0,0,0,12"
                        MinHeight="60"
                        CornerRadius="12,12,12,12">
                    
                    <Grid HorizontalAlignment="Center" x:Name="SidebarBrandingLayout">
                        <Grid.Resources>
                            <Style x:Key="BrandingIconImageStyle" TargetType="Image">
                                <Setter Property="Width" Value="110"/>
                                <Setter Property="Height" Value="110"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Stretch" Value="Uniform"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SidebarHeaderIconPath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True"/>
                                            <Condition Binding="{Binding SidebarHeaderIconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style x:Key="BrandingIconGlyphStyle" TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                <Setter Property="FontSize" Value="28"/>
                                <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarHeaderIconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SidebarHeaderText, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False">
                                        <Setter Property="FontSize" Value="42"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style x:Key="BrandingHeaderTextStyle" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="MaxWidth" Value="220"/>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarHeaderText, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>

                        <!-- Left (default) layout -->
                        <StackPanel x:Name="BrandingLeftLayout"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Right">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Top">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Bottom">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Grid Margin="0,0,12,0">
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       TextAlignment="Left"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                        </StackPanel>

                        <!-- Right layout -->
                        <StackPanel x:Name="BrandingRightLayout"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Right">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       Margin="0,0,12,0"
                                       TextAlignment="Right"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                            <Grid>
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Top layout -->
                        <StackPanel x:Name="BrandingTopLayout"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Top">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Grid Margin="0,0,0,8">
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       TextAlignment="Center"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                        </StackPanel>

                        <!-- Bottom layout -->
                        <StackPanel x:Name="BrandingBottomLayout"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Bottom">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       Margin="0,0,0,8"
                                       TextAlignment="Center"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                            <Grid>
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Subtle divider line -->
                <Rectangle Height="1" 
                          Fill="{DynamicResource BorderBrush}" 
                          Opacity="0.2"
                          Margin="0,0,0,16"/>

                <!-- Steps Section -->
                <Border Background="{DynamicResource SidebarBackgroundBrush}"
                        BorderThickness="0"
                        Padding="20,16">
                    
                    <ItemsControl ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Each step container -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>   <!-- Circle + Icon column -->
                                    <ColumnDefinition Width="*"/>      <!-- Text column -->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>  <!-- Step content -->
                                    <RowDefinition Height="*"/>     <!-- Connector line -->
                                </Grid.RowDefinitions>

                                <!-- Step circle and icon container -->
                                <StackPanel Grid.Column="0" Grid.Row="0" 
                                            Orientation="Horizontal"
                                            Margin="0,8,0,0"
                                            VerticalAlignment="Center">
                                    
                                    <!-- Circle with number/checkmark -->
                                    <Grid Width="32" Height="32" Margin="0,0,8,0">
                                        <!-- Icon background circle -->
                                        <Ellipse Width="24" Height="24">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{DynamicResource SidebarBackgroundBrush}"/>
                                                <Setter Property="Stroke" Value="{DynamicResource BorderBrush}"/>
                                                <Setter Property="StrokeThickness" Value="2"/>
                                                <Style.Triggers>
                                                    <!-- Completed: Green background -->
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Fill" Value="#107C10"/>
                                                        <Setter Property="Stroke" Value="#107C10"/>
                                                    </DataTrigger>
                                                    <!-- Current: Blue background -->
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="Fill" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                        <Setter Property="Stroke" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                    </DataTrigger>
                                                    <!-- Current + Valid: Green background -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="True"/>
                                                            <Condition Binding="{Binding IsValid}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Fill" Value="#107C10"/>
                                                        <Setter Property="Stroke" Value="#107C10"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    
                                    <!-- Completed: Checkmark (only when NOT current) -->
                                    <TextBlock Text="&#xE73E;" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <!-- Show when completed AND not current -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCompleted}" Value="True"/>
                                                            <Condition Binding="{Binding IsCurrent}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Current: Step number (when invalid) -->
                                    <TextBlock Text="{Binding StepNumber}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               FontFamily="Segoe UI"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="True"/>
                                                            <Condition Binding="{Binding IsValid}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Current: White checkmark on green circle (when valid) -->
                                    <TextBlock Text="&#xE73E;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="True"/>
                                                            <Condition Binding="{Binding IsValid}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Upcoming: Step number (gray) -->
                                    <TextBlock Text="{Binding StepNumber}"
                                               FontSize="12"
                                               Foreground="{DynamicResource SidebarTextBrush}"
                                               Opacity="0.5"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    </Grid>
                                    
                                    <!-- Step Icon (always visible if present) -->
                                    <TextBlock Text="{Binding IconGlyph}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="16"
                                               Foreground="{DynamicResource SidebarTextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Opacity" Value="0.7"/>
                                                <Style.Triggers>
                                                    <!-- Show if icon exists -->
                                                    <DataTrigger Binding="{Binding IconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <!-- Brighter when current -->
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="Opacity" Value="1"/>
                                                        <Setter Property="Foreground" Value="#0078D4"/>
                                                    </DataTrigger>
                                                    <!-- Green when completed -->
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Opacity" Value="1"/>
                                                        <Setter Property="Foreground" Value="#107C10"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Step text -->
                                <Border Grid.Column="1" Grid.Row="0" 
                                        Padding="12,8" 
                                        Margin="0,8,0,0"
                                        CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <!-- Current step: Blue glow -->
                                                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                    <Setter Property="Background" Value="#200078D4"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <TextBlock Text="{Binding Title}" 
                                               Foreground="{DynamicResource SidebarTextBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Title}"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Opacity" Value="0.8"/>
                                                <Style.Triggers>
                                                    <!-- Current: Bold and bright -->
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                    <!-- Completed: SemiBold -->
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </Border>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="{DynamicResource ContentBackgroundBrush}" x:Name="ContentGrid">
            <Grid.RowDefinitions>
                 <RowDefinition Height="Auto"/>
                 <RowDefinition Height="*"/>
                 <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Theme Toggle in Content Area -->
            <ToggleButton Grid.Row="0" x:Name="TitleBarThemeToggle"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="0,20,30,0"
                          Width="32" Height="32"
                          Style="{StaticResource TitleBarIconButtonStyle}"
                          ToolTip="Toggle theme"
                          Checked="ThemeToggle_Checked" Unchecked="ThemeToggle_Unchecked">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16"
                           Foreground="{DynamicResource BodyForegroundBrush}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="&#xE706;"/>  <!-- Sun -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=TitleBarThemeToggle}" Value="True">
                                    <Setter Property="Text" Value="&#xE708;"/>  <!-- Moon -->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </ToggleButton>

            <ContentControl Grid.Row="1" Content="{Binding CurrentPage}" Margin="40,20,20,30" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>


            <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="40,20">
                 <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="PrevButton" Content="Previous"
                            Command="{Binding PreviousCommand}"
                            IsEnabled="{Binding CanGoBack}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinWidth="100"
                            Margin="0,0,10,0" Click="PrevButton_Click"/>
                    <Button x:Name="NextButton" Content="{Binding NextButtonText}"
                            Command="{Binding NextCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinWidth="100"
                            Click="NextButton_Click"/>
                 </StackPanel>
            </Border>
        </Grid>
        
        <!-- Progress Overlay for slow operations -->
        <controls:ProgressOverlay Grid.ColumnSpan="2" 
                                  Panel.ZIndex="1000"
                                  ShowOverlay="{Binding IsProcessing}"
                                  Message="{Binding ProcessingMessage}"/>
        </Grid>
    </Grid>
</Window>